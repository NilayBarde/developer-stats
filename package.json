{
  "name": "developer-stats",
  "version": "1.0.0",
  "description": "Engineering stats dashboard for GitHub, GitLab, and Jira",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "dashboard",
    "github",
    "gitlab",
    "jira",
    "stats"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@adobe/jwt-auth": "^2.0.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
